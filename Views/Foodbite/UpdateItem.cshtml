@using ExamVoid.Models
@model Food

    <div class="container">
        @using (Html.BeginForm("UpdateTheItem", "Foodbite"))
        {
            <div class="form-group">
                <label for="a">Food item id</label>
                @*<input type="text" class="form-control" name="name" placeholder="Enter email"/>*@
                @Html.TextBoxFor(item => item.id, new { Class = "form-control" })
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                <label for="a">Food item Name</label>
                @*<input type="text" class="form-control" name="name" placeholder="Enter email"/>*@
                @Html.TextBoxFor(item => item.name, new { Class = "form-control" })
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Category</label>
                @*<input type="text" class="form-control" name="category" placeholder="Enter category" />*@
                @Html.TextBoxFor(item => item.category, new { Class = "form-control" })

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Price</label>
                @*<input type="number" class="form-control" name="price" placeholder="Enter price" />*@
                @Html.TextBoxFor(item => item.price, new { Class = "form-control" })

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Availablity</label>
                @*<input type="text" class="form-control" name="avail" placeholder="Enter avail" />*@
                @Html.TextBoxFor(item => item.avail, new { Class = "form-control" })
            </div>
            <br />
            <button type="submit" style="width:100%" class="btn btn-info btn-block">Submit</button>
        }
    </div>

